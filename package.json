    "test:watch": "vitest",
    "test:health": "vitest run src/__tests__/health-check.test.ts",
    "test:kb-indexing": "vitest run src/__tests__/kb-indexing.test.ts",
    "test:search": "vitest run src/__tests__/search.test.ts",
    "test:generation": "vitest run src/__tests__/generation.test.ts",
    "test:jira": "vitest run src/__tests__/jira-integration.test.ts",
