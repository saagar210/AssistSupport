    "test:security:paths": "vitest run src/__tests__/security/paths.test.ts",
    "test:security:audit": "vitest run src/__tests__/security/audit.test.ts",
    "test:performance:search": "vitest run src/__tests__/performance/search.bench.ts",
    "test:performance:generation": "vitest run src/__tests__/performance/generation.bench.ts",
    "test:performance:database": "vitest run src/__tests__/performance/database.bench.ts",
    "test:coverage": "vitest run --coverage",
